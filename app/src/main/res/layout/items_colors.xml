<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:padding="10dp"
    android:layout_height="wrap_content">

    <com.jc.sistema.Utils.PoppinsTextviewRegular
        android:layout_width="wrap_content"
        android:text="Color :"
        android:textSize="12dp"
        android:gravity="center"
        android:layout_height="match_parent"/>

    <ImageView
        android:layout_width="24dp"
        android:layout_gravity="center"
        android:id="@+id/item_color"
        android:layout_marginStart="5dp"
        android:layout_height="24dp"/>

    <com.jc.sistema.Utils.PoppinsTextviewRegular
        android:layout_width="wrap_content"
        android:text="Cantidad : "
        android:textSize="12dp"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:layout_height="match_parent"/>

    <Button
        android:layout_width="50dp"
        android:text="-"
        android:id="@+id/item_subtract"
        android:gravity="center"
        android:textColor="@color/white"
        android:backgroundTint="@color/purple_500"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText" />

    <com.jc.sistema.Utils.PoppinsTextviewMedium
        android:layout_width="34dp"
        android:id="@+id/item_qunatity_color"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_marginRight="5dp"
        android:layout_height="match_parent"/>

    <Button
        android:layout_width="50dp"
        android:id="@+id/item_add"
        android:textColor="@color/white"
        android:backgroundTint="@color/purple_500"
        android:text="+"
        android:gravity="center"
        android:layout_height="wrap_content"/>

    <View
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="0dp"/>

    <ImageView
        android:id="@+id/item_btn_delete"
        android:layout_gravity="center"
        android:layout_width="24dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ic_delete_color"
        android:layout_height="24dp"
        android:contentDescription="TODO"
        tools:ignore="RtlHardcoded" />

</LinearLayout>