<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp"
    android:id="@+id/linear_item"
    android:background="#F7F7F7"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    android:orientation="vertical"
    tools:ignore="UnusedAttribute">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="50dp"
                android:scaleType="centerCrop"
                android:layout_height="50dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.jc.sistema.Utils.PoppinsTextviewBold
                    android:id="@+id/tv_item_num_order"
                    android:layout_marginStart="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/semidark"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    tools:text="NUM ORDER" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginStart="2dp"
                    android:layout_height="wrap_content">

                    <com.jc.sistema.Utils.PoppinsTextviewRegular
                        android:layout_marginStart="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#566573"
                        android:textSize="12dp"
                        android:text="Cliente : " />

                    <com.jc.sistema.Utils.PoppinsTextviewSemiBold
                        android:id="@+id/tv_client"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/mainColor"
                        android:textSize="12dp"
                        tools:text="Item order" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginStart="2dp"
                    android:layout_height="wrap_content">

                    <com.jc.sistema.Utils.PoppinsTextviewRegular
                        android:layout_marginStart="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#566573"
                        android:textSize="12dp"
                        android:text="DNI : " />

                    <com.jc.sistema.Utils.PoppinsTextviewSemiBold
                        android:id="@+id/tv_dni"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/red"
                        android:textSize="12dp"
                        tools:text="Item order" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginStart="2dp"
                    android:layout_height="wrap_content">

                    <com.jc.sistema.Utils.PoppinsTextviewRegular
                        android:layout_marginStart="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#566573"
                        android:textSize="12dp"
                        android:text="Estado : " />

                    <com.jc.sistema.Utils.PoppinsTextviewSemiBold
                        android:id="@+id/tv_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/red"
                        android:textSize="12dp"
                        tools:text="Cancelled" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>