<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f3"
    android:orientation="vertical"
    tools:context=".UI.LoginActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imghexagon"
                android:layout_width="140dp"
                android:layout_height="212dp"
                android:layout_gravity="right"
                android:src="@drawable/hexagone1" />

            <ImageView
                android:layout_width="140dp"
                android:src="@drawable/logo_jc"
                android:layout_gravity="left"
                android:elevation="6dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:layout_height="140dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="120dp"
                android:scaleType="fitXY"
                android:src="@drawable/hexagone2" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingTop="145dp"
                android:layout_marginLeft="32dp"
                android:layout_marginBottom="90dp"
                android:orientation="vertical">


                <com.jc.sistema.Utils.PoppinsTextviewSemiBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_marginTop="10dp"
                    android:text="Iniciar Sesión"
                    android:layout_gravity="left"
                    android:textColor="#6D6D6D"
                    android:textSize="22sp" />

                <com.jc.sistema.Utils.PoppinsTextviewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13.3sp"
                    android:layout_gravity="left"
                    android:layout_marginTop="42.7dp"
                    android:textColor="#6D6D6D"
                    android:text="Email"
                    />

                <com.jc.sistema.Utils.PoppinsEditText
                    android:id="@+id/edt_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF"
                    android:inputType="textEmailAddress"
                    android:layout_gravity="left"
                    android:maxLines="1"
                    android:layout_marginTop="18dp"
                    android:background="@android:color/transparent"
                    />

                <View
                    android:layout_width="263.7dp"
                    android:layout_height="1dp"
                    android:layout_gravity="left"
                    android:layout_marginTop="6.3dp"
                    android:background="#6D6D6D"/>


                <com.jc.sistema.Utils.PoppinsTextviewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13.3sp"
                    android:textColor="#6D6D6D"
                    android:layout_gravity="left"
                    android:layout_marginTop="37.3dp"
                    android:text="Password"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        app:passwordToggleEnabled="true"
                        android:layout_height="wrap_content">

                        <com.jc.sistema.Utils.PoppinsEditText
                            android:id="@+id/edt_password"
                            android:inputType="textPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColorHint="#ffffff"
                            android:maxLength="10"
                            android:maxLines="1"
                            android:textColor="#FFFFFF"
                            android:background="@android:color/transparent"/>

                    </com.google.android.material.textfield.TextInputLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="17.3dp"
                    android:layout_height="wrap_content">

                    <com.jc.sistema.Utils.PoppinsTextviewSemiBold
                        android:id="@+id/txt_register"
                        android:layout_width="0dp"
                        android:layout_marginEnd="15dp"
                        android:layout_weight="1"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textColor="#FFF"
                        android:layout_gravity="right"
                        android:text="Registrarse"/>

                    <com.jc.sistema.Utils.PoppinsTextviewSemiBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:textColor="#FFF"
                        android:layout_gravity="right"
                        android:text="Olvidaste tu Contraseña?"/>

                </LinearLayout>

            </LinearLayout>

            <com.jc.sistema.Utils.PoppinsTextviewRegular
                android:layout_width="wrap_content"
                android:text="Acceder"
                android:textColor="#fff"
                android:textSize="16dp"
                android:layout_gravity="bottom|right"
                android:layout_marginRight="80dp"
                android:layout_marginBottom="52dp"
                android:layout_height="wrap_content"/>

            <FrameLayout
                android:id="@+id/btn_login"
                android:elevation="6dp"
                android:layout_width="40.7dp"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:layout_height="45.3dp"
                android:layout_gravity="bottom|right"
                android:layout_marginRight="27.3dp"
                android:layout_marginBottom="43.7dp"
                android:background="@drawable/white_hexagone">

                <ImageView
                    android:layout_width="18.7dp"
                    android:layout_height="15.3dp"
                    android:layout_gravity="center"
                    android:src="@drawable/right_arrow"/>

            </FrameLayout>


        </FrameLayout>

    </LinearLayout>

</LinearLayout>