<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp"
    android:id="@+id/linear_item"
    android:background="#F7F7F7"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_item_image"
                android:layout_width="50dp"
                android:scaleType="centerCrop"
                android:layout_height="50dp"/>

            <LinearLayout
                android:id="@+id/ll_dashboard_item_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.jc.sistema.Utils.PoppinsTextviewBold
                    android:id="@+id/tv_item_description"
                    android:layout_marginStart="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/semidark"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    tools:text="Item Name" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginStart="2dp"
                    android:layout_height="wrap_content">

                    <com.jc.sistema.Utils.PoppinsTextviewRegular
                        android:layout_marginStart="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#566573"
                        android:textSize="12dp"
                        android:text="CategorÃ­a : " />

                    <com.jc.sistema.Utils.PoppinsTextviewSemiBold
                        android:id="@+id/tv_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/mainColor"
                        android:textSize="12dp"
                        tools:text="Item store" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginEnd="8dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/ln_price_pza"
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="2dp"
                        android:layout_height="wrap_content">

                        <com.jc.sistema.Utils.PoppinsTextviewSemiBold
                            android:layout_marginStart="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="12dp"
                            android:text="PZA: " />

                        <com.jc.sistema.Utils.PoppinsTextviewBold
                            android:id="@+id/tv_item_price_for_pza"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            tools:text="$100.00" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:id="@+id/ln_price_doc"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="2dp"
                        android:layout_height="wrap_content">

                        <com.jc.sistema.Utils.PoppinsTextviewSemiBold
                            android:layout_marginStart="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="12dp"
                            android:text="DOC: " />

                        <com.jc.sistema.Utils.PoppinsTextviewBold
                            android:id="@+id/tv_item_price_for_doc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            tools:text="$100.00" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:id="@+id/ln_price_jgo"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="2dp"
                        android:layout_height="wrap_content">

                        <com.jc.sistema.Utils.PoppinsTextviewSemiBold
                            android:layout_marginStart="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="12dp"
                            android:text="JGO: " />

                        <com.jc.sistema.Utils.PoppinsTextviewBold
                            android:id="@+id/tv_item_price_for_jgo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            tools:text="$100.00" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginStart="2dp"
                    android:layout_height="wrap_content">

                    <com.jc.sistema.Utils.PoppinsTextviewRegular
                        android:layout_marginStart="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#566573"
                        android:textSize="12dp"
                        android:text="Stock : " />

                    <com.jc.sistema.Utils.PoppinsTextviewSemiBold
                        android:id="@+id/tv_stock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/red"
                        android:textSize="12dp"
                        tools:text="Item store" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>